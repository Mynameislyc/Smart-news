<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#F0F0F0"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="20dp"
    android:descendantFocusability="beforeDescendants">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_marginBottom="3dp"
        android:id="@+id/linearLayout_weixinjingsuan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信精选"
            android:textColor="#AE0000"
            Android:typeface="serif"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门的讨论话题"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/weichat_jingsuan_image"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginBottom="3dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:id="@+id/linearLayout_historytoday"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史的今天"
                    Android:typeface="serif"
                    android:textColor="#005757"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生活中的镜子"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/weichat_lishishangdejintian"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:id="@+id/linearLayout_nbasaishi"
                android:layout_marginRight="1dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    Android:typeface="serif"
                    android:gravity="center"
                    android:textColor="#930000"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    android:text="NBA赛事"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/weichat_nbasaishi"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:id="@+id/linearLayoutlearnniingshengdi"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    Android:typeface="serif"
                    android:gravity="center"
                    android:textColor="#000079"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    android:text="学习圣地"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/weichat_learning"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
